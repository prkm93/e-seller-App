<% include ../../partials/header %>

	<div class="container">
	    <div class="row">    
	        <h1 style="text-align:center;"> 
	          Edit product details
	        </h1>
	        <% if(cloth.category === "clothes"){ %>
	        <div style="width: 30%; margin: 25px auto;">
				<form action="/clothes/<%= cloth._id %>?_method=PUT" method="POST">
					<div class="formgroup">
						<label>Category</label>
						<input type="text" class="form-control" name="cloth[category]" value="<%= cloth.category %>">
					</div>
					<div class="formgroup">
						<label>Name</label>
						<input type="text" class="form-control" name="cloth[name]" value="<%= cloth.name %>">
					</div>
					<div class="formgroup">
						<label>Image</label>
						<input type="text" class="form-control" name="cloth[image]" value="<%= cloth.image %>">
					</div>
					<div class="formgroup">
						<label>Description</label>
						<textarea class="form-control" rows="8" name="cloth[description]"><%= cloth.description %></textarea>
					</div>
					<div class="formgroup">
						<label>Price</label>
						<input type="text" class="form-control" name="cloth[price]" value="<%= cloth.price %>">
					</div>
					<div class="formgroup">
						<label>Features</label>
						<input type="text" class="form-control" rows="8" name="cloth[features]" value="<%= cloth.features %>">
					<div><br>
					<div class="formgroup">
						<label>Color</label>
						<input type="text" class="form-control" name="cloth[color]" value="<%= cloth.color %>">
					</div>
					<div class="formgroup">
						<label>Size</label>
						<input type="text" class="form-control" name="cloth[size]" value="<%= cloth.size %>">
					</div>
					<div class="formgroup">
						<label>Sold By:</label>
						<input type="text" class="form-control" name="cloth[seller]" value="<%= cloth.seller %>">
					</div><br>
					<div class="formgroup">
						<button class="btn btn-lg btn-primary btn-block">Submit</button>
					</div>
				</form>
				<a href="/clothes">Go back</a>
			</div> <% } %>
		</div>
	</div>

<% include ../../partials/footer %>